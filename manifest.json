{
  "manifest_version": 2,
  "name": "Duodo",
  "description": "Need motivation to practice a language? Block your favorite sites until you hit your goal!",
  "version": "0.1",
  "options_page": "public/options/index.html",
  "background": {
    "scripts": ["background/background.js"],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "tabs",
    "storage"
  ]
}
