{
  "manifest_version": 2,
  "name": "Duodo",
  "description": "Need motivationt to practice a language? Block your favorite sites until you hit your goal!",
  "version": "0.1",
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "main.js"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*",
    "storage"],
  "background": {
    "scripts": ["background.js"]
  }
}
